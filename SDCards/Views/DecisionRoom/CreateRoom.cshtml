@{
    ViewBag.Title = "Create Room";
}

<div class="create-room-container">
    <img src="~/img/logo.png" alt="Swipe & Decide" class="page-title-img" />

    <img src="~/img/cards.png" alt="Cards" class="cards-img breathing" />

    <form asp-action="CreateRoom" method="post" class="create-room-form">
        <div class="form-group">
            <label for="usernameInput" class="form-label">Enter your name</label>
            <input type="text" class="form-input" id="usernameInput" name="username" placeholder="Your Name" required />
        </div>

        <div class="form-group">
            <label for="questionInput" class="form-label">What are you trying to decide?</label>
            <input type="text" class="form-input" id="questionInput" name="question" placeholder="Propose a question" required />
        </div>
        <div class="form-group">
            <label for="timeLimitSeconds">Timer (minutes)</label>
            <select name="timeLimitSeconds" id="timeLimitSeconds" class="form-input">
                <option value="">No Timer</option>
                <option value="120">2 minutes</option>
                <option value="300">5 minutes</option>
                <option value="600">10 minutes</option>
            </select>
        </div>
        <div class="form-group">
            <label for="maxAnswersPerPerson">Max Answers Per Person</label>
            <input type="number" class="form-input" id="maxAnswersPerPerson" name="maxAnswersPerPerson" min="1" max="10" value="3" required />
        </div>

        <button type="submit" class="submit-btn">Create Room</button>
    </form>
</div>